module load lammps
date=$(date +%d_%m-%H%M)
startTemp=1.0
temp=1.0 #$(bc <<< "0.8+(${SLURM_ARRAY_TASK_ID}-1)*0.1")                                                                                                                                                                                        
tempstr=$(bc <<< ${temp}*10/1)
printf -v j "%02d" $tempstr
sol=$(bc <<< "0.50+(${SGE_TASK_ID}-1)*0.05")
solstr=$(bc <<< $sol*100/1)
printf -v s "%04d" $solstr

dir=scc_${NSLOTS}_sol_${s}_new-${date}

mkdir $dir
cp restart.dat* data* in.mix job* $dir/.
cd $dir


mpirun -n ${NSLOTS} lmp -v sol $sol -v startTemp ${startTemp} -v temp ${temp} -in in.mix
